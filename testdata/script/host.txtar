! stderr '"view": "default"'
stdout 'host1.seci.rice.edu 10.10.10.211'

# Add 03c: Get Host record host1.seci.rice.edu/10.10.10.211 in any view
exec ibapi host get host1.seci.rice.edu 10.10.10.211 -Rttl -v
